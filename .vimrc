filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
" Highlight code
syntax enable
" Show line numbers
set number
" Set backup location
set backupdir=$HOME/.vim/backups
" Set buffer location
set directory=$HOME/.vim/buffers
